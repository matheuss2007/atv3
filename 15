15- Cauculo de Potencia

#include <stdio.h>

int main() {
    double base;
    int expoente;

    printf("Digite a base: ");
    scanf("%lf", &base);
    printf("Digite o expoente: ");
    scanf("%d", &expoente);

    double resultado = (base * expoente);

    printf("%.2lf elevado a %d Ã© %.2lf.\n", base, expoente, resultado);

    return 0;
}
